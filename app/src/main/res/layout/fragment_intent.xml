<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/title_constraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zd.andrdemo.major.IntentFragment"
    tools:layout_editor_absoluteY="81dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp">

        <TextView
            android:id="@+id/name_text"
            android:layout_width="368dp"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_horizontal"
            android:text="@string/intent"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/purple_200"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="all"
            android:maxLines="2"
            android:text="https://developer.android.com/guide/components/intents-filters" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="24dp"
            android:autoLink="all"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="https://blog.csdn.net/u011240877/article/details/71305797" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/startAppXsBt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="显式启动另一应用" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/startAppYsBt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="隐式启动另一应用或者Activity" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/startServiceBt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="启动服务" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sendBroadcastBt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发送广播" />


    </LinearLayout>
</ScrollView>
